<html>
@model P50_4_22.Models.Review

@if (User.Identity.IsAuthenticated)
{
    <div class="review-form-container">
        <hr class="white-line" />

        <h2 class="text">Написать отзыв</h2>
        <form asp-action="AddReview" method="post" class="text review-form">
            <input type="hidden" name="CatalogroductId" value="@ViewData["ProductId"]" />

            <div class="form-group">
                <label>Рейтинг:</label>
                <select name="Rating" class="form-control">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i ⭐</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Отзыв:</label>
                <textarea name="ReviewText" required class="form-control"></textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Оставить отзыв</button>
            </div>
        </form>
        <hr class="white-line" />
    </div>
}
</html>

<style>
    .review-form-container {
        width: 100%; 
        margin-left: 0;
    }

        .review-form-container h2 {
            margin-bottom: 20px; 
            font-size: 24px;
        }

    .review-form {
        max-width: 400px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block; 
            margin-bottom: 5px; 
            font-weight: bold; 
        }

    .form-control {
        width: 100%;
        padding: 8px; 
        box-sizing: border-box; 
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn {
        background-color: #4CAF50;
        color: white;
        padding: 10px 20px; 
        border: none;
        border-radius: 4px;
        cursor: pointer; 
    }

        .btn:hover {
            background-color: #45a049; 
        }

    .text {
        color: white;
    }

    .white-line {
        border: 0; 
        height: 1px;
        background-color: white;
        margin: 20px 0;
        width: 100%;
    }
</style>